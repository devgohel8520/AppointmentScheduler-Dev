<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Home")" style="margin-top:-5px;"><img alt="Brand" src="~/Content/Images/logo.png" width="30"></a> <span class="navbar-brand-title">Appointment</span>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Index","Home", new { area = ""})">Demo</a></li>
                        <li><a href="@Url.Action("Index","Home", new { area = ""})">Pricing</a></li>
                        <li><a href="@Url.Action("Index","Home", new { area = ""})">Scheduler</a></li>
                        <li><a href="@Url.Action("Index","Home", new { area = ""})">Support</a></li>
                        <li><a href="@Url.Action("Index","Home", new { area = ""})">Partners</a></li>
                        <li><a href="@Url.Action("Contact","Home", new { area = ""})">Contact</a></li>
                        <li><a href="@Url.Action("Login","Home", new { area = ""})">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
