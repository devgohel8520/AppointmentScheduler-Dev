@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessCustomerViewMdoel>

@{
    ViewBag.Title = "Deactive Customer";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Business Customer Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Deactive Customer</b>
            </div>
            @using (Ajax.BeginForm("deactive", "customer", new AjaxOptions { }))
            {
                <div class="panel-body">
                    @if (Model == null & Model.Data == null)
                    {
                        <text>Please try again later.</text>
                        return;
                    }
                    <div class="tab-content" style="padding:0px 10px;">
                        <div class="row">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(d => d.Data.ServiceLocationId)
                            @Html.HiddenFor(d => d.Data.Id)
                            @Html.HiddenFor(d => d.Data.Email)
                            <div class="form-group col-lg-6">
                                <label>First Name</label>
                                <div class="form-control">
                                    @Model.Data.FirstName
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Last Name</label>
                                <div class="form-control">
                                    @Model.Data.LastName
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Is Active <small> ( User can log into app if it is in active state.)</small></label>
                                <div class="form-control">
                                    @Html.CheckBoxFor(d => d.Data.IsActive)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnDeactive" class="btn btn-info btn-sm " type="button" value="Submit" onclick="onSubmit(this,'@Url.Action("index", "customer", new { area = "admin" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "customer", new { area = "admin" }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>