@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<ServiceLocationViewModel>

@{
    ViewBag.Title = "Service Location";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Service Location Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="@Url.Action("location","servicelocation",new { area = "admin", id = ViewBag.Id})">Location</a></li>
            <li><a href="@Url.Action("hour","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Hours</a></li>
            <li><a href="@Url.Action("holiday","servicelocation",new { area = "admin", id = ViewBag.Id})">Business Holiday</a></li>
        </ul>
        <div class="panel panel-default" style="border-top:0;">
            <div class="panel-body">
                @if (Model == null & Model.Data == null)
                {
                    <text>Please try again later.</text>
                    return;
                }
                <div class="tab-content" style="padding:0px 10px;">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Business Name</label>
                            <div class="form-control">
                                @Model.Data.Name
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Description</label>
                            <div class="form-control text-overflow">
                                @Model.Data.Description
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Address 1</label>
                            <div class="form-control">
                                @Model.Data.Add1
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Address 2</label>
                            <div class="form-control">
                                @Model.Data.Add2
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>City</label>
                            <div class="form-control">
                                @Model.Data.City
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>State</label>
                            <div class="form-control">
                                @Model.Data.State
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Zip</label>
                            <div class="form-control">
                                @Model.Data.Zip
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Country</label>
                            <div class="form-control">
                                @Model.Data.CountryId
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Timezone</label>
                            <div class="form-control">
                                @Model.Data.TimezoneId
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <input id="btnUpdate" class="btn btn-info btn-sm " type="button" value="Update" onclick="@("window.location.href='" + @Url.Action("edit","servicelocation",new { area="admin", id = Model.Data.Id })+ "'");" />
                        <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index","servicelocation",new { area="admin"}) + "'");" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
