@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessViewModel>

@{
    ViewBag.Title = "Update Membership";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Membership Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Membership</b>
            </div>
            @using (Ajax.BeginForm("edit", "membership", new AjaxOptions { }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(d => d.Data.Id)
                <div class="panel-body">
                    @if (Model == null & Model.Data == null)
                {
                <text>Please try again later.</text>
                    return;
                }
                    <div class="tab-pane">
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label>Membership</label>
                                @Html.DropDownListFor(d => d.Data.MembershipId, new SelectList(ViewBag.MembershipId, "Value", "Text"), "--Select Membership --", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <input id="btnUpdate" class="btn btn-info btn-sm " type="button" value="Update" onclick="onSubmit(this,'@Url.Action("index", "membership", new { area = "admin" })')" />
                            <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index", "membership", new { area = "admin" }) + "'");" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>