@using App.Schedule.Domains.ViewModel;
@model ResponseViewModel<BusinessViewModel>
@{
    ViewBag.Title = "Account Profile";
    Layout = "~/Views/Shared/_AfterLoginMaster.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Account Profile Setup</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_ErrorView.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="@Url.Action("index", "account", new { area = "admin" })">Profile</a></li>
            <li><a href="@Url.Action("administrator", "account", new { area = "admin" })">Administrator</a></li>
            <li><a href="@Url.Action("membership", "account", new { area = "admin" })">Membership</a></li>
            <li><a href="@Url.Action("billing", "account", new { area = "admin" })">Billing</a></li>
        </ul>
        <div class="panel panel-default" style="border-top:0;">
            <div class="panel-body">
                @if (Model == null & Model.Data == null)
                {
                    <text>Please try again later.</text>
                    return;
                }
                <div class="tab-pane">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Category</label>
                            @if (Model.Data != null && Model.Data.tblBusinessCategory != null)
                            {
                                <div class="form-control">
                                    @Model.Data.tblBusinessCategory.Name
                                </div>
                            }
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Business Name</label>
                            <div class="form-control">
                                @Model.Data.Name
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Short Name</label>
                            <div class="form-control">
                                @Model.Data.ShortName
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Short Name</label>
                            <div class="form-control">
                                @Model.Data.ShortName
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Phone No.</label>
                            <div class="form-control">
                                @Model.Data.PhoneNumbers
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Fax No.</label>
                            <div class="form-control">
                                @Model.Data.FaxNumbers
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Email</label>
                            <div class="form-control">
                                @Model.Data.Email
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Website</label>
                            <div class="form-control">
                                @Model.Data.Website
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Address 1</label>
                            <div class="form-control">
                                @Model.Data.Add1
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Address 2</label>
                            <div class="form-control">
                                @Model.Data.Add1
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>City</label>
                            <div class="form-control">
                                @Model.Data.City
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>State</label>
                            <div class="form-control">
                                @Model.Data.State
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Zip</label>
                            <div class="form-control">
                                @Model.Data.Zip
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Country</label>
                            <div class="form-control">
                                @Model.Data.CountryId
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Timezone</label>
                            <div class="form-control">
                                @{var timezone = Model.Data.tblTimezone != null ? @Model.Data.tblTimezone.Title : "";}
                                @timezone
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Is International</label>
                            <div class="form-control">
                                @{ var international = Model.Data.IsInternational ? "Yes" : "No"; }
                                @international
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <input id="btnUpdate" class="btn btn-info btn-sm " type="button" value="Update" onclick="@("window.location.href='" + @Url.Action("index","profile",new { area="admin"}) + "'");" />
                        <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("index","accountsetup",new { area="admin"}) + "'");" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>