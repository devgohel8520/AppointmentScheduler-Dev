@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<AdministratorViewModel>
@{
    ViewBag.Title = "Change Admin Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Admins</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("Delete", new AjaxOptions { }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-users fa-fw"></i> Delete Admin
                </div>
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Data.Id)
                    @Html.HiddenFor(model => model.Data.AdministratorId)
                    @Html.HiddenFor(mode => Model.Data.IsActive)
                    <div class="col-lg-12">
                        <div class="text-danger">
                            Are you sure want to remove?
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>FirstName</label>
                        <div class="form-control text-overflow">
                            @Model.Data.FirstName
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Last Name</label>
                        <div class="form-control text-overflow">
                            @Model.Data.LastName
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Contact Number</label>
                        <div class="form-control text-overflow">
                            @Model.Data.ContactNumber
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Email</label>
                        <div class="form-control text-overflow">
                            @Model.Data.Email
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <input id="btnSave" class="btn btn-danger btn-sm" type="button" value="Delete" onclick="onSubmit(this,'@Url.Action("Index", "Admin")');" />
                                <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "Admin") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
