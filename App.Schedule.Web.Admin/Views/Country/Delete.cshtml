@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<CountryViewModel>
@{
    ViewBag.Title = "Delete Country";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Country</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("Delete", new AjaxOptions { }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-globe fa-fw"></i> Delete Country
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(d => d.Data.Id)
                    <div class="col-lg-12">
                        <div class="text-danger">
                            Are you sure want to remove?
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Name</label>
                        <div class="form-control text-overflow">
                            @Model.Data.Name
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>ISO(2)</label>
                        <div class="form-control text-overflow">
                            @Model.Data.ISO
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>ISO(3)</label>
                        <div class="form-control text-overflow">
                            @Model.Data.ISO3
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Corrency Code</label>
                        <div class="form-control text-overflow">
                            @Model.Data.CurrencyCode
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Currency Name</label>
                        <div class="form-control text-overflow">
                            @Model.Data.CurrencyName
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Phone Code</label>
                        <div class="form-control text-overflow">
                            @Model.Data.PhoneCode
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <input id="btnDelete" class="btn btn-danger btn-sm " type="button" value="Delete" onclick="onSubmit(this,'@Url.Action("Index", "Country")');" />
                                <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "Country") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

