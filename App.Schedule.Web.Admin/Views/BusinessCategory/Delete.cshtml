@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<BusinessCategoryViewModel>
@{
    ViewBag.Title = "Delete Business Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Business Category</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("Delete", new AjaxOptions { }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bars fa-fw"></i> Delete Category
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(d => d.Data.Id)
                    <div class="col-lg-12">
                        <div class="text-danger">
                            Are you sure want to remove?
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Name</label>
                        <div class="form-control">
                            @Model.Data.Name
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Type</label>
                        <div class="form-control">
                            @Model.Data.Type
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Order No.</label>
                        <div class="form-control">
                            @Model.Data.OrderNumber
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Description</label>
                        <div class="form-control">
                            @Model.Data.Description
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <div class="text-left" style="height:60px;">
                            @if (!string.IsNullOrEmpty(Model.Data.PictureLink))
                            {
                                <img id="categoryImage" class="img-circle" src="@Model.Data.PictureLink" width="50" height="50" />
                            }
                            else
                            {
                                <img id="categoryImage" class="img-circle" src="~/Content/Images/NoImageThumb.gif" width="50" height="50" />
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <input id="btnDelete" class="btn btn-danger btn-sm " type="button" value="Delete" onclick="onSubmit(this,'@Url.Action("Index", "BusinessCategory")');" />
                                <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "BusinessCategory") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>