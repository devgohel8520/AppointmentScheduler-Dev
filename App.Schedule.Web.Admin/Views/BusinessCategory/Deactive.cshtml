@using App.Schedule.Domains.ViewModel;
@model ServiceDataViewModel<BusinessCategoryViewModel>
@{
    ViewBag.Title = "Deactive Business Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Business Category</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/SubViews/_Error.cshtml", Model)
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("Deactive", new AjaxOptions { }))
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-book fa-fw"></i> Deactive Category
                </div>
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Data.Id)
                    <div class="form-group col-lg-6">
                        <label>Title</label>
                        <div class="form-control text-overflow">
                            @Model.Data.Name
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Membership Price</label>
                        <div class="form-control text-overflow">
                            @Model.Data.Type
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <label>
                            @Html.CheckBoxFor(model => model.Data.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                            is Active?
                        </label>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12">
                                <input id="btnDeactive" class="btn btn-danger btn-sm " type="button" value="Deactive" onclick="onSubmit(this,'@Url.Action("Index", "BusinessCategory")');" />
                                <input type="button" class="btn btn-default btn-sm" value="Back" onclick="@("window.location.href='" + @Url.Action("Index", "BusinessCategory") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>